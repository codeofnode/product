{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "airbnb-base"],
  "plugins": [
    "babel"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "AppImport": true
  },
  "rules": {
    "babel/new-cap": 1,
    "babel/no-invalid-this": 1,
    "babel/quotes": 1,
    "babel/semi": 1,
    "babel/no-unused-expressions": 1,
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-nested-ternary": "off",
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "no-underscore-dangle": [
      "error", {
        "allow": ["_id"]
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
