{
  "type": "unit",
  "tests" : [
    {
      "summary": "Constructor Empty",
      "request": {
        "method": "default",
        "construct": true
      },
      "extractors": {
        "allrounder": "output"
      },
      "assertions": {
        "error": null,
        "output.testsuites": [],
        "output.nextTs": -1
      }
    },
    {
      "summary": "loading allrounder",
      "require": "{{allrounder}}",
      "request": {
        "method": "next"
      },
      "extractors": {
        "allrounder": "output"
      },
      "assertions": {
        "output.nextTs": 0,
        "output.testsuites.length": 0
      }
    },
    {
      "summary": "Constructor Valid",
      "request": {
        "method": "default",
        "construct": true,
        "params": {
          "filePath": "test/rawdata/testcase.json",
          "testsuites": ["testcase"]
        }
      },
      "extractors": {
        "allrounder": "output"
      },
      "assertions": {
        "output.testsuites.0.type": "rest"
      }
    },
    {
      "summary": "loading next test suite from allrounder",
      "require": "{{allrounder}}",
      "request": {
        "method": "next"
      },
      "extractors": {
        "allrounder": "output"
      },
      "assertions": {
        "output.nextTs": 0,
        "output.testsuites.0.type": "rest"
      }
    },
    {
      "summary": "starting execution test cases",
      "require": "{{allrounder}}",
      "request": {
        "method": "start"
      },
      "extractors": {
        "allrounder": "output"
      },
      "assertions": {
        "output.stopped": false
      }
    },
    {
      "summary": "stopping execution test cases",
      "require": "{{allrounder}}",
      "request": {
        "method": "stop"
      },
      "extractors": {
        "allrounder": "output"
      },
      "assertions": {
        "output.stopped": true
      }
    },
    {
      "summary": "abort execution test cases",
      "require": "{{allrounder}}",
      "request": {
        "method": "abort"
      },
      "extractors": {
        "allrounder": "output"
      }
    }
  ]
}
